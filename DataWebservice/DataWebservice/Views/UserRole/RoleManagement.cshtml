

@model DataWebservice.Models.UserRoleViewModel
@{
    ViewData["Title"] = "RoleManagement";
}

<h1>Role Management for @ViewBag.User</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <h4>Existing Roles</h4>

        <ul class="list-group">
            @foreach (Microsoft.AspNetCore.Identity.IdentityRole role in ViewBag.Roles)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <a asp-action="Details" asp-controller="Role" asp-route-id="@role.Id">@role.Name</a>
                </li>
            }
        </ul>
    </div>
</div>

<hr />
<h4>Management</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddRoleToUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserID" />
            <div class="form-group">
                <label asp-for="RoleID" class="control-label">Role</label>
                <select asp-for="RoleID" class="form-control" asp-items="ViewBag.RoleID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <form asp-action="RemoveRoleFromUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserID" />
            <div class="form-group">
                <label asp-for="RoleID" class="control-label">Role</label>
                <select asp-for="RoleID" class="form-control" asp-items="ViewBag.RoleID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Remove" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




